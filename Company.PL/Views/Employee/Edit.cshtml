@model Company.BLL.ModelVM.EditEmployeeVM

@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden fields to track ID and existing image -->
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExistingImageUrl" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DepartmentId" class="control-label"></label>
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments"></select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>

            <!-- Other fields like Age, Salary etc. -->

            <div class="form-group mb-3">
                <label asp-for="NewImageFile" class="control-label"></label>
                <input asp-for="NewImageFile" type="file" class="form-control" />
                <span asp-validation-for="NewImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h5>Current Photo</h5>
        @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
        {
            <img src="~/Files/@Model.ExistingImageUrl" class="img-fluid rounded" alt="Current Photo" />
        }
        else
        {
            <p>No photo available.</p>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
